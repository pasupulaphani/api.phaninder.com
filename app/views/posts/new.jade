extends ../layout/top

block content

	.row
		section(role='main')
			#post.row
				.large-10.columns
					- var action  = post ? "/posts/"+post._id : "/posts"
					- var _method = post ? "put" : "post"
					- var title   = post ? post.title : ''
					- var seo_url = post ? post.seo_url : ''
					- var body    = post ? post.body : ''
					- var created = post ? post.created : Date.now.toString()
					form(method="post", action=action)
						input(type="hidden", name="_method", value=_method)
						ul
							li
								lable(for="title") Title
								input#title(name="title", type="text", value="#{title}")
							li
								lable(for="title") Seo URL
								input#seo_url(name="seo_url", type="text", value="#{seo_url}")
							li
								lable(for="body") Body
								textarea#post-body(name="body", style="display: none")= unescape(body)
								div#epiceditor
							br
							li
								lable(for="created") Created
								input.datepicker#created(name="created", type="text", value="#{created}")
							br
							li
								input.tiny.button(type="submit", value="Save")
								| &nbsp;&nbsp;&nbsp;
								a(href=action) Cancel
		include ./search
	include ../layout/bottom

	if (session.isLoggedIn)
		script(src=staticHost+"/js/src/vendor/epiceditor.js")
		script.
			var opts = {
				container: 'epiceditor',
				textarea: 'post-body',
				basePath: 'epiceditor',
				clientSideStorage: false,
				localStorageName: 'epiceditor',
				useNativeFullscreen: true,
				parser: marked,
				file: {
					name: 'epiceditor',
					defaultContent: '',
					autoSave: false
				},
				theme: {
					base: '#{staticHost}/css/src/vendor/epiceditor/epiceditor.css',
					preview: '#{staticHost}/css/src/vendor/epiceditor/github.css',
					editor: '#{staticHost}/css/src/vendor/epiceditor/epic-dark.css'
				},
				button: {
					preview: true,
					fullscreen: true,
					bar: "auto"
				},
				focusOnLoad: false,
				shortcut: {
					modifier: 18,
					fullscreen: 70,
					preview: 80
				},
				string: {
					togglePreview: 'Toggle Preview Mode',
					toggleEdit: 'Toggle Edit Mode',
					toggleFullscreen: 'Enter Fullscreen'
				},
				autogrow: true
			}
			var editor = new EpicEditor(opts).load();

		//- datepicker stuff
		link(rel='stylesheet', href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css")
		script(src="http://code.jquery.com/ui/1.10.4/jquery-ui.js")
		script.
			var temp = $( "#created" ).val();
			$( "#created" ).val(fomatDate(temp))
			$( ".datepicker" ).datepicker();
